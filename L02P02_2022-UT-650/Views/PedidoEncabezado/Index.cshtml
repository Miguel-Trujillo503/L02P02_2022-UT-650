@model IEnumerable<L02P02_2022_UT_650.Models.PedidoEncabezado>

<div class="container mt-4">
    <h2 class="text-center">Lista de Pedidos</h2>
    <a href="@Url.Action("Create", "PedidoEncabezado")" class="btn btn-primary mb-3">Agregar Pedido</a>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>ID Cliente</th>
                <th>Cantidad Libros</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedido in Model)
            {
                <tr>
                    <td>@pedido.Id</td>
                    <td>@pedido.IdCliente</td>
                    <td>@pedido.CantidadLibros</td>
                    <td>@pedido.Total</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="footer">
    2025-03-04 - Miguel Ernesto Umaña Trujillo
</div>