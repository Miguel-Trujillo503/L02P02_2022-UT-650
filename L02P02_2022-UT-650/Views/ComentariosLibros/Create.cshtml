@model L02P02_2022_UT_650.Models.ComentariosLibros

<h2>Agregar Comentario</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">ID Libro</label>
        <input type="number" name="IdLibro" class="form-control" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Comentario</label>
        <textarea name="Comentarios" class="form-control" required></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input type="text" name="Usuario" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>

<a href="@Url.Action("Index", "ComentariosLibros")" class="btn btn-secondary">Volver</a>
