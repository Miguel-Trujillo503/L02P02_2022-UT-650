@model IEnumerable<L02P02_2022_UT_650.Models.PedidoDetalle>

<div class="container mt-4">
    <h2 class="text-center">Lista de Detalles de Pedidos</h2>
    <a href="@Url.Action("Create", "PedidoDetalle")" class="btn btn-primary mb-3">Agregar Detalle</a>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>ID Pedido</th>
                <th>ID Libro</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model)
            {
                <tr>
                    <td>@detalle.Id</td>
                    <td>@detalle.IdPedido</td>
                    <td>@detalle.IdLibro</td>
                    <td>@detalle.FechaCreacion</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="footer">
    2025-03-04 - Miguel Ernesto Umaña Trujillo
</div>