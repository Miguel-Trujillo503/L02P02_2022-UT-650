@model L02P02_2022_UT_650.Models.PedidoDetalle

<h2>Agregar Detalle de Pedido</h2>

<form method="post">
    <div class="mb-3">
        <label class="form-label">ID Pedido</label>
        <input type="number" name="IdPedido" class="form-control" required>
    </div>
    <div class="mb-3">
        <label class="form-label">ID Libro</label>
        <input type="number" name="IdLibro" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>

<a href="@Url.Action("Index", "PedidoDetalle")" class="btn btn-secondary">Volver</a>
